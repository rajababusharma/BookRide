<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookRide.Views.TravellerProfilePage"
             Title="Book Your Ride Here">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Label Margin="20,10,0,10" FontSize="Title" FontAttributes="Bold" Grid.Row="0">
            <Label.Text>
                <MultiBinding StringFormat="{}{0} {1}{2}">
                    <Binding Path="Hi"/>
                    <Binding Path="User.FirstName"/>
                    <Binding Path="User.LastName"/>
                </MultiBinding>
            </Label.Text>
        </Label>
        <Label Grid.Row="1" Margin="20,0,10,10" FontSize="Subtitle"  Text="Below are the list of available drivers, you can call them to book your ride"></Label>
        <Border Stroke="Gray" StrokeThickness="1" Grid.Row="2">
            <Picker x:Name="pkrdistrict"
      Title="Please Select City"  SelectedItem="{Binding SelectedDistrict}"
      ItemsSource="{Binding Districts}" />
        </Border>
        <Border Stroke="Gray" StrokeThickness="1" Grid.Row="3">
        <CollectionView 
            ItemsSource="{Binding UsersList}" VerticalScrollBarVisibility="Default"
          SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray">
                        <Grid Margin="10,0,0,10" RowSpacing="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label  Grid.Row="0" Grid.ColumnSpan="2" FontSize="Title" FontAttributes="Bold" TextColor="BlueViolet">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="FirstName" />
                                        <Binding Path="LastName" />
                                    </MultiBinding>
                                </Label.Text>
                            </Label>
                            <Label Text="Phone Number:" Grid.Row="1" Grid.Column="0"/>
                            <Label Text="Driving License:" Grid.Row="2" Grid.Column="0"/>
                            <Label Text="Vehicle Type:" Grid.Row="3" Grid.Column="0"/>
                            <Label Text="Address:" Grid.Row="4" Grid.Column="0"/>
                                <Label Text="District:" Grid.Row="5" Grid.Column="0"/>

                                <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                <Label Text="{Binding Mobile}"/>
                                <Image Source="call.png" WidthRequest="30" HeightRequest="30" Margin="10,0,0,0" VerticalOptions="CenterAndExpand">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}},
                            Path=BindingContext.CallCommand}" CommandParameter="{Binding Mobile}" />
                                    </Image.GestureRecognizers>
                                </Image>


                            </HorizontalStackLayout>

                            <Label Text="{Binding DrivingLicense}" Grid.Row="2" Grid.Column="1"/>
                            <Label Text="{Binding VehicleType}" Grid.Row="3" Grid.Column="1"/>
                            <Label Text="{Binding Address}" Grid.Row="4" Grid.Column="1"/>
                            <Label Text="{Binding District}" Grid.Row="5" Grid.Column="1"/>

                            </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
        </Border>
    </Grid>
  

</ContentPage>