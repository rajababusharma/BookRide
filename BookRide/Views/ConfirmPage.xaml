<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookRide.Views.ConfirmPage"
             Padding="{OnPlatform Android='0,30,0,20'}"
             Title="Registration Confirmation">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior 
            IsVisible="False" 
            IsEnabled="False" />
    </Shell.BackButtonBehavior>
    <VerticalStackLayout>
        <Label FontSize="Subtitle" Margin="10,20,0,20"
            Text="You have successfully completed/updated the registration."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Margin="10,20,0,20"
         Text="Please login to see the list of available drivers/vehicles to book your ride."
         VerticalOptions="Center" 
         HorizontalOptions="Center" />

        <!-- Login Button -->
        <Button
        Text="Go To Login" Clicked="Button_Clicked" HorizontalOptions="Center" WidthRequest="200"
        BackgroundColor="#0066CC"
        TextColor="White"
        HeightRequest="48"
        CornerRadius="8" />

    </VerticalStackLayout>
</ContentPage>