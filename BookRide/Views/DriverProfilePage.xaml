<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookRide.Views.DriverProfilePage"
          
             Title="Home">
    <VerticalStackLayout>

        <Border Stroke="Black" StrokeThickness="1"    StrokeShape="RoundRectangle 15" HeightRequest="100" WidthRequest="100">
                        <Image Source="person.png" HeightRequest="80" WidthRequest="80" HorizontalOptions="Center"></Image>
                    </Border>
        <Label  FontSize="Title" FontAttributes="Bold" Grid.Row="0" HorizontalTextAlignment="Center">
            <Label.Text>
                <MultiBinding StringFormat="{}{0} {1}">
                    <Binding Path="User.FirstName"/>
                    <Binding Path="User.LastName"/>
                </MultiBinding>
            </Label.Text>
        </Label>

        <Grid Grid.Column="1" Margin="20,20,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="Phone Number:" Grid.Row="0" Grid.Column="0"/>
            <Label Text="Driving License:" Grid.Row="1" Grid.Column="0"/>
            <Label Text="Vehicle Type:" Grid.Row="2" Grid.Column="0"/>
            <Label Text="Address:" Grid.Row="3" Grid.Column="0"/>
            <Label Text="{Binding User.Mobile}"  Grid.Row="0" Grid.Column="1"/>
            <Label Text="{Binding User.DrivingLicense}" Grid.Row="1" Grid.Column="1"/>
            <Label Text="{Binding User.User.VehicleType}" Grid.Row="2" Grid.Column="1"/>
            <Label Text="{Binding User.Address}" Grid.Row="3" Grid.Column="1"/>

        </Grid>
     
    </VerticalStackLayout>
</ContentPage>